<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#d3d9d6">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFF"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="@string/spring_collection"
                android:textColor="@color/title_color"
                android:textSize="@dimen/title_size" />

            <ImageButton
                android:layout_width="432dp"
                android:layout_height="216dp"
                android:background="@drawable/banner"
                android:contentDescription="@string/failed"
                android:scaleType="fitXY"
                android:src="@drawable/custom_image_click" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp"
            android:background="#FFF"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="@string/list_of_category"
                android:textColor="@color/title_color"
                android:textSize="@dimen/title_size" />

            <android.support.v4.view.ViewPager
                android:id="@+id/pagerCategory"
                android:layout_width="432dp"
                android:layout_height="216dp"
                android:scaleType="fitXY" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFF"
            android:padding="8dp"
            android:orientation="vertical">

            <TextView
                android:textColor="@color/title_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/top_product"
                android:textSize="@dimen/title_size" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/lvProducts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
